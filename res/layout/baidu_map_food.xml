<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/distance"
        android:singleLine="true"
        android:text="重庆鸡公煲"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#46A3FF" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentRight="true"
        android:text="355米" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:text="南苑商业街55号"
        android:textColor="#A9A9A9" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/address"
        android:background="@drawable/msg_header_shadow" />

    <LinearLayout
        android:id="@+id/oper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/gothere"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/list_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_poidetail_nav"
            android:gravity="center"
            android:text="查看位置"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/list_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_open_telephone"
            android:gravity="center"
            android:text="电话"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@id/oper"
        android:background="#F0FFFF" />

</RelativeLayout>